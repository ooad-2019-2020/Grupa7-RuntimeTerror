@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Untitled</title>
    <link rel="stylesheet" href="css/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="css/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="css/assets/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="css/assets/css/styles.css">
</head>
<body>
    <div id="pocetna">
        <div class="jumbotron">
            @if (!(User.IsInRole("Uposlenik uprave") || User.IsInRole("Šef kuhinje") || User.IsInRole("Šef tehničkog održavanja")))
            {
                <h1>Dobrodošli na stranicu studentskog doma!<br></h1>
                <p><br>Više od 50 godina njegujemo tradiciju i pružamo usluge studentima iz cijele Bosne i Hercegovine. Postanite i Vi član doma!<br><br></p>
            }
            @if (!User.Identity.IsAuthenticated)
            {
                <p><a asp-action="RegistracijaStudenta" asp-controller="RegistracijaStudenta" class="btn btn-primary" role="button" id="dugme" style="background-color: rgb(184,152,113);">Prijavi se za stanovanje</a></p>

            }
            @if (User.Identity.IsAuthenticated && !(User.IsInRole("Uposlenik uprave") || User.IsInRole("Šef kuhinje") || User.IsInRole("Šef tehničkog održavanja")))
            {
                <p><a asp-action="Create" asp-controller="PrijavaKvara" class="btn btn-primary" role="button" id="dugme" style="background-color: rgb(184,152,113);">Prijavi kvar</a></p>
                <p><a asp-action="Create" asp-controller="PrijavaObroka" class="btn btn-primary" role="button" id="dugme" style="background-color: rgb(184,152,113);">Prijavi obrok</a></p>
                <p><a asp-action="PregledPrijaveUDom" asp-controller="RegistracijaStudenta" class="btn btn-primary" role="button" id="dugme" style="background-color: rgb(184,152,113);">Moj profil</a></p>



            }
            @if (User.IsInRole("Uposlenik uprave"))
            {
                <h1>Dobrodošli na svoj profil!<br></h1>
                <p><br>Ovdje možete pogledati,izbrisati ili odobriti studentske prijave!
                <br>Također možete pogledati prijave obroka i kvara!<br><br></p>
                <p><a asp-action="Index" asp-controller="RegistracijaStudenta" class="btn btn-primary" role="button" id="dugme2" style="background-color: rgb(184,152,113);">Lista prijava studenata</a></p>
                <p><a asp-action="Index" asp-controller="PrijavaKvara" class="btn btn-primary" role="button" id="dugme2" style="background-color: rgb(184,152,113);">Lista prijava kvara</a></p>
                <p><a asp-action="Index" asp-controller="PrijavaObroka" class="btn btn-primary" role="button" id="dugme2" style="background-color: rgb(184,152,113);">Lista prijava obroka</a></p>
            }
            @if (User.IsInRole("Šef kuhinje"))
            {
                <h1>Dobrodošli na svoj profil!<br></h1>
                <p><br>Ovdje možete pregledati,urediti ili izbrisati prijave obroka!<br><br></p>
                <p><a asp-action="Index" asp-controller="PrijavaObroka" class="btn btn-primary" role="button" id="dugme3" style="background-color: rgb(184,152,113);">Pregled prijava obroka</a></p>

            }
            @if (User.IsInRole("Šef tehničkog održavanja"))
            {
                <h1>Dobrodošli na svoj profil!<br></h1>
                <p><br>Ovdje možete pregledati,urediti i izbrisati prijave kvarova ili ih označiti kao riješene!<br><br></p>
                <p><a asp-action="Index" asp-controller="PrijavaKvara" class="btn btn-primary" role="button" id="dugme4" style="background-color: rgb(184,152,113);">Pregled prijava kvarova</a></p>

            }
        </div>
    </div>
    <div id="donji" style="background-color: #e1ccbc;">
        @if (!(User.IsInRole("Uposlenik uprave") || User.IsInRole("Šef kuhinje") || User.IsInRole("Šef tehničkog održavanja")))
        {
            <h2 class="text-center" id="podpodnaslov">Šta sve možete uraditi online</h2>
        }

    <div class="row">
        @if (!(User.IsInRole("Šef kuhinje") || User.IsInRole("Šef tehničkog održavanja")))
        {
            <div class="col-4">
                <h3 class="text-center"></h3><i class="fa fa-pencil-square-o d-xl-flex justify-content-xl-center" id="upis"></i>
                <h3 class="text-center">Registrovati se</h3>
                <p class="text-center">Registracija nikada nije bila lakša koristeći naš online prijavni obrazac</p>
            </div>
        }
        @if (!((User.IsInRole("Uposlenik uprave") || User.IsInRole("Šef tehničkog održavanja"))))
        {
            <div class="col-4">
                <h3 class="text-center"><i class="fa fa-cutlery" id="obrok"></i></h3>
                <h3 class="text-center">Prijaviti obrok</h3>
                <p class="text-center">Dnevna prijava obroka Vam olakšava planiranje vremena i omogućava da naknadno preuzmete obrok</p>
            </div>
        }
        @if (!((User.IsInRole("Šef kuhinje") || User.IsInRole("Uposlenik uprave"))))
        {
            <div class="col-4">
                <h3 class="text-center"><i class="fas fa-hammer" id="obrok"></i></h3>
                <h3 class="text-center">Prijaviti kvar</h3>
                <p class="text-center">Jednostavna prijava kvara omogućava brzo reagovanje od strane našeg osoblja</p>
            </div>
        }

    </div>


    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>

</body>

</html>
