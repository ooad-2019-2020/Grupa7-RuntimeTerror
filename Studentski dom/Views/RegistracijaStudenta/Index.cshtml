                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fotografija)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrijavaStudentaID">Edit</a> |
                <a asp-action="PregledPrijaveUDom" asp-route-id="@item.PrijavaStudentaID">Pogledaj prijavu</a> |
                <a asp-action="Delete" asp-route-id="@item.PrijavaStudentaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
