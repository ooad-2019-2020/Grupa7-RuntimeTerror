    ViewData["Title"] = "Index";
}

<h1 align="center">Pregled prijava u dom</h1>

<p>
    <a asp-action="RegistracijaStudenta">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImePrezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JMBG)
            </th>
            <th>
