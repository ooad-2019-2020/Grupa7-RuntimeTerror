                <div class="form-group" style="width:200px">
                    <select class="form-control" id="CiklusStudija" name="CiklusStudija">
                        <option></option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                    <span asp-validation-for="CiklusStudija" class="text-danger"></span>
                </div>
            </td>
            <td>
                <label asp-for="Fotografija" class="control-label"></label>
            </td>
            <td width="220px">
                <div class="form-group" style="width:200px">
                    <input asp-for="Fotografija" class="form-control" />
                    <span asp-validation-for="Fotografija" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td>
                <label asp-for="BrojIndeksa" class="control-label"></label>
            </td>
            <td>
                <div class="form-group" style="width:200px">
                    <input asp-for="BrojIndeksa" class="form-control" />
                    <span asp-validation-for="BrojIndeksa" class="text-danger"></span>
                </div>
            </td>
        </tr>

        <tr style="height:100px">
            <td></td>
            <td></td>
            <td colspan="2">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
